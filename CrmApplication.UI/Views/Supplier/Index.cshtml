@model IEnumerable<CrmApplication.Entites.Supplier>

@{
    ViewData["Title"] = "Tedarikçi Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Tedarikçi Listesi</h1>
                </div>

                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Tedarikçi Listesi</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-primary" onclick="openCreateModal('Supplier')">Yeni Tedarikçi Oluştur </a>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default">
                                                <i class="fas fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>Tedarikçi No</th>
                                            <th>Firma Adı</th>
                                            <th>EMail</th>
                                            <th>Telefon</th>
                                            <th>Veri Dairesi</th>
                                            <th>Veri No</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.CompanyName</td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>@item.TaxAdmin</td>
                                                <td>@item.TaxNumber</td>
                                                <td>
                                                    <a onclick="openDeleteModal('Supplier',@item.Id)" class="btn btn-danger btn-sm" title="Kaydı Sil"><i class="fa fa-trash"></i></a>
                                                </td>
                                                <td>
                                                    <a onclick="openEditModal('Supplier',@item.Id)" class="btn btn-warning btn-sm" title="Kaydı Güncelle"><i class="fa fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                Footer
            </div>
        </div>
    </section>
</div>


@*SUPPLIER CREAT İŞLEMİ İÇİN MODAL*@
<vc:modal modal-id="modalSupplierCreate" header-text="Tedarikçi Oluştur" form-id="formSupplierCreate" button-class="primary" button-text="Kaydet" detail-div-id="divCreateModalDetail"></vc:modal>


@*SUPPLIER EDİT İŞLEMİ İÇİN MODAL*@
<vc:modal modal-id="modalSupplierEdit" header-text="Tedarikçi Güncelle" form-id="formSupplierEdit" button-class="primary" button-text="Kaydet" detail-div-id="divEditModalDetail"></vc:modal>


@*SUPPLIER DELETE İŞLEMİ İÇİN MODAL*@
<vc:modal modal-id="modalSupplierDelete" header-text="Tedarikçi Sil" form-id="formSupplierDelete" button-class="danger" button-text="Sil" detail-div-id="divDeleteModalDetail"></vc:modal>
