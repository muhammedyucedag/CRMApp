@model Employee
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" id="formEmployeeEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NameSurname" class="control-label"></label>
                <input asp-for="NameSurname" class="form-control" />
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwonrd" class="control-label"></label>
                <input asp-for="Passwonrd" class="form-control" />
                <span asp-validation-for="Passwonrd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CitizenNumber" class="control-label"></label>
                <input asp-for="CitizenNumber" class="form-control" />
                <span asp-validation-for="CitizenNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnteranceDate" class="control-label"></label>
                <input asp-for="EnteranceDate" class="form-control" />
                <span asp-validation-for="EnteranceDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select class="form-control select2" style="width: 100%;" asp-for="Role">
                    <option selected="selected">Seçim Yapınız</option>
                    <option>Admin</option>
                    <option>User</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label><br />
                <input asp-for="Status" type="checkbox" checked data-bootstrap-switch>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(
        function () {
            //$('.select2').select2()
            $('.select2').select2({
                dropdownparent: $("#modalEmployeeCreate")
            });

            $("input[data-bootstrap-switch]").each(function () {
                $(this).bootstrapSwitch('state', $(this).prop('checked'));
            })

        });
</script>